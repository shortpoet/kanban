{
  "compilerOptions": {
    "moduleResolution": "node",
    "sourceMap": true,
    // "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "isolatedModules": false,
    "strict": false,
    "jsx": "preserve",
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "types": ["webpack-env", "jest", "node"],
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "ES2019",
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost",
      "es5",
      "es6"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "shims-vue.d.ts"
    // "shims-tsx.d.ts"
  ],
  "exclude": ["node_modules"]
}
